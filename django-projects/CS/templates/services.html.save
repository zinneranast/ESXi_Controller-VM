{% load staticfiles %}

{% block content %}
    <div id="backing"></div>
    <div class="popup popup-get"><a href="/" class="popup-close"><span></span><span></span></a>
      <p class="popup__title">Get the service</p>
      <p class="popup__subtitle">You can use the service now!</p>
      <form action="/connect/" method="connect" class="popup__form">
        <label class="label">Enter your name:</label>
        <input type="text" placeholder="{{name}}" name="name" class="input">
        <label class="label">Enter your surname:</label>
        <input placeholder="{{surname}}" name="surname" class="input">
        <label class="label">Enter your e-mail:</label>
        <input type="text" placeholder="{{email}}" name="email" class="input">
        <label class="label">Choose the service:</label>
        <div class="select">
          <select name="service">
            {% for i in services %}
            <option>{{i.ServiceName}}</option>
            {% endfor %}
          </select>
        </div>
        <label class="label">Enter IP-address for connecting:</label>
        <input type="text" placeholder="{{ip_address}}" name="ip_address" class="input">
        <input type="submit" vxalue="Connect" class="btn popup__btn">
      </form>
      <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
      <script src="{% static "js/main.js" %}"></script>
    </div>
  </body>
</html>
